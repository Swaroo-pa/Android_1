<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CEF8EDED"
    tools:context=".SellActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CEF4DFDF"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/sym_name"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:textSize="28dp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:text="@string/sym_name"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/exc_name"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/exc_name"/>
            <TextView
                android:id="@+id/ltp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textColor="#AC1005"
                android:text="@string/ltp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="20dp"/>
            <Space
                android:layout_width="104dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="150dp"
                android:layout_marginLeft="20dp"
                android:layout_height="45dp"
                android:background="@color/white">
                <EditText
                    android:id="@+id/quantity_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/edit_box"
                    android:hint="Quantity"/>
            </FrameLayout>
            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="000.0"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/add"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="OK"
                android:textColor="#AC1005"
                android:backgroundTint="@color/white" />
            <Button
                android:id="@+id/sell"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SELL"
                android:backgroundTint="#AC1005"/>
            <TextView
                android:layout_marginTop="80dp"
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>